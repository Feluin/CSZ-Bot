{
  "name": "csz-bot",
  "private": true,
  "version": "0.1.0",
  "description": "Offizieller Bot der Coding Shitpost Zentrale",
  "main": "built/app.js",
  "type": "module",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node built/app.js",
    "test": "tsc --noEmit",
    "compile": "tsc --sourceMap false --removeComments true",
    "ci": "rome ci ./",
    "format": "rome format --write ./",
    "lint": "rome check ./",
    "lint:fix": "rome check --apply ./",
    "dev": "npm run lint && npm run watch",
    "watch-node": "node --watch built/app.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -n 'TS,N' -c 'cyan,green' 'npm run watch-ts' 'npm run watch-node'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NullDev/CSZ-Bot.git"
  },
  "author": "NullDev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NullDev/CSZ-Bot/issues"
  },
  "homepage": "https://github.com/NullDev/CSZ-Bot#readme",
  "dependencies": {
    "@discordjs/voice": "^0.16.0",
    "@resvg/resvg-js": "^2.4.1",
    "canvas": "^2.11.2",
    "chrono-node": "^2.6.3",
    "croner": "^6.0.5",
    "discord.js": "^14.11.0",
    "get-audio-duration": "^4.0.0",
    "graphviz-wasm": "^3.0.0",
    "instagram-url-direct": "^1.0.13",
    "jsdom": "^22.1.0",
    "libsodium-wrappers": "^0.7.11",
    "minimist": "^1.2.8",
    "moment": "^2.29.4",
    "pino": "^8.14.1",
    "sequelize": "^6.32.1",
    "sqlite3": "~5.1.6"
  },
  "devDependencies": {
    "@ffprobe-installer/ffprobe": "^2.1.0",
    "@types/jsdom": "^21.1.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.3.3",
    "@types/node-cron": "^3.0.8",
    "@types/node-fetch": "^2.6.4",
    "@types/sqlite3": "^3.1.8",
    "concurrently": "^8.2.0",
    "pino-pretty": "^10.0.1",
    "rome": "^12.1.3",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
