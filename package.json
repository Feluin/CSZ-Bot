{
  "name": "csz-bot",
  "private": true,
  "version": "0.1.0",
  "description": "Offizieller Bot der Coding Shitpost Zentrale",
  "main": "built/app.js",
  "type": "module",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node built/app.js",
    "test": "tsc --noEmit",
    "compile": "tsc --sourceMap false --removeComments true",
    "ci": "biome ci ./",
    "format": "biome format --write ./",
    "lint": "biome lint ./",
    "lint:fix": "biome lint --apply ./",
    "watch": "concurrently -k -c 'cyan,green' \"tsc -w\" \"node --watch built/app.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NullDev/CSZ-Bot.git"
  },
  "author": "Users of the CSZ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NullDev/CSZ-Bot/issues"
  },
  "homepage": "https://github.com/NullDev/CSZ-Bot#readme",
  "dependencies": {
    "@discordjs/voice": "^0.16.1",
    "@resvg/resvg-js": "^2.6.0",
    "canvas": "^2.11.2",
    "chrono-node": "^2.7.3",
    "croner": "^8.0.0",
    "discord.js": "^14.14.1",
    "get-audio-duration": "^4.0.1",
    "graphviz-wasm": "^3.0.1",
    "instagram-url-direct": "^1.0.13",
    "jsdom": "^23.0.1",
    "libsodium-wrappers": "^0.7.13",
    "minimist": "^1.2.8",
    "moment": "^2.29.4",
    "pino": "^8.17.1",
    "sequelize": "^6.35.2",
    "splid-js": "^1.1.1",
    "sqlite3": "~5.1.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^8.2.2",
    "pino-pretty": "^10.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=21.1.0"
  }
}
